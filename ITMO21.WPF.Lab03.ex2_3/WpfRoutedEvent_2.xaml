<Window x:Class="ITMO21.WPF.Lab03.ex2_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO21.WPF.Lab03.ex2_3"
        mc:Ignorable="d"
        Title="Calculate" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Center" Margin="0,133,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
